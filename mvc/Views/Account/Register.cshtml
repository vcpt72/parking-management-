@model Parking_projekt.Models.AppUser
@{
    ViewData["Title"] = "Registrace";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />


<h2>Registrace</h2>



<form asp-action="Register" method="post" class="mt-3">
    <div class="mb-3">
        <label asp-for="Username" class="form-label">Uživatelské jméno</label>
        <input asp-for="Username" class="form-control" />
        <span asp-validation-for="Username" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Password" class="form-label">Heslo</label>
        <input asp-for="Password" class="form-control" type="password" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Registrovat</button>
</form>

